<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<%= form_for(:session, url: sessions_path) do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email, placeholder: 'Email' %>

  <%= f.label :password %>
  <%= f.text_field :password, placeholder: 'Password' %>
  <%= f.submit('Sign in') %>
<% end %>

<p>New user? <%= link_to "Sign up now!", sign_up_path %></p>

